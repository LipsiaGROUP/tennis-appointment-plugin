=render layout: "stecms_appointment/shared/panel" do
  =render_card_box title: t("admin.users.title"), collapse: false do
    .table-responsive
      %table.table.table-sm#user-roles-table
        %thead
          %tr
            %th=t("admin.users.table.email")
            %th=t("admin.users.table.fullname")
            %th Cellula
            -# %th=t("admin.users.table.gender")
            -# %th=t("admin.users.table.birthday")
            %th Indirizzo
            -# %th=t("admin.users.table.created_at")
            %th=" "
        %tbody
          - @customers.each do |customer|
            %tr
              %td= customer.email
              %td= customer.name
              %td= customer.cell
              -# %td= customer.gender
              -# %td= customer.birthday
              %td= customer.address
              -# %td= customer.city
              %td= link_to 'Elenco di appuntamenti', customer_path(customer), class: "btn btn-primary"
    %br/
    = link_to 'Nuovo cliente', new_customer_path, class: "btn btn-primary"
